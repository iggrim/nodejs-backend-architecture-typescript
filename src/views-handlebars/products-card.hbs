<h1>{{title_1}}</h1>

<div id="card">
  
{{#if card.products.length}}

  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>

    <tbody>   
      {{#each card.products}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btm-small js-remove" data-id="{{id}}">Удалить</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Цена:</strong> <span class="price">{{card.price}}</span></p>
{{else}}
  <p>Корзина пуста</p>
{{/if}}

</div>