<h1>Все товары</h1>

<h6>Выбор валюты</h6>
  <form action = '#' name = "intlForm">
    <p>
      <label>
        <input name="group1" type="radio" value = "RUB" checked />
        <span>Ru</span>
      </label>
    </p>
    <p>
      <label>
        <input name="group1" type="radio" value = "USD"/>
        <span>US</span>
      </label>
    </p>
  </form>

     

{{#if products.length}}
{{#each products}}

<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">

      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>

      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>

      <div class="card-action">
        <a href="/products/{{id}}" target="_blank" >Информация о товаре</a>
        <a href="/products/{{id}}/edit?allow=true">Редактировать</a>
      </div>

    </div>
  </div>
</div>
{{/each}}

{{else}}

<p>Товаров пока нет</p>

{{/if}}