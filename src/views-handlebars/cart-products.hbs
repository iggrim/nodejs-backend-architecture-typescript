<h1>{{title_1}}</h1>

<div id="cart">

  {{#if cart.length}}

    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Количество</th>
          <th>Действия</th>
        </tr>
      </thead>

      <tbody>
        {{#each cart}}
          <tr>
            <td>{{productId.title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class="btn btm-small js-remove"
                data-id="{{productId._id}}"
              >Удалить</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
     
      <button type="submit" class="btn">Сделать заказ</button>
    </form>
    
  {{else}}
    <p>Корзина пуста</p>
  {{/if}}

</div>